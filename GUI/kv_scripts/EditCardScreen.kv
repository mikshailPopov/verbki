<EditCardScreen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            size_hint: 1, .2
            text: "Edit"
            font_size: "30dp"
        BoxLayout:
            orientation: "horizontal"
            size_hint: .8, None
            height: "40dp"
            Label:
                text: "Native"
                color: 1,1,1,1
                font_size: "25dp"
            TextInput:
                id: original_input
                hint_text: "Type here..."
                write_tab: False
                multiline: False
                font_size: "25dp"
            Label:
                text: "Infinitive"
                color: 1,1,1,1
                font_size: "25dp"
            TextInput:
                id: infinitive_input
                hint_text: "Type here..."
                write_tab: False
                multiline: False
                font_size: "25dp"

        ScrollView:
            size_hint: .83, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            do_scroll_x: False
            do_scroll_y: True
            StackLayout:
                spacing: "10dp"
                id: tense_stack
                height: self.minimum_height
                size_hint_y: None
                BoxLayout:
                    id: tense_container
                    orientation: 'vertical'
                    size_hint: None, None
                    height: self.minimum_height
                    width: "220dp"

                    background_color: 0,0,0,0
                    canvas.before:
                        Color:
                            rgba: 0.3, 0.3, 0.3, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size

                    Label:
                        id: tense_label
                        size_hint: 1, None
                        height: "40dp"
                        text: "Tense Name"
                        font_size: "14dp"

                    BoxLayout:
                        orientation: "vertical"
                        size_hint: 1, None
                        height: self.minimum_height

                        background_color: 0,0,0,0
                        canvas.before:
                            Color:
                                rgba: 1, 1, 1, 1
                            Rectangle:
                                pos: self.pos
                                size: self.size

                        BoxLayout:
                            size_hint: 1, None
                            height: "30dp"
                            orientation: "horizontal"
                            Label:
                                text: r'Yo'
                                color: 0,0,0,1
                                font_size: "13dp"
                            TextInput:
                                id: name_input
                                hint_text: "Type here..."
                                multiline: False
                                font_size: "14dp"
        BoxLayout
            size_hint: 1, .2
            orientation: 'horizontal'
            padding: "30dp", "15dp"
            spacing: "10dp"
            Button:
                text: "Back"
                size_hint: .1, 1
                height: "45dp"
                width: "100dp"
                pos: "50dp", "45dp"
                on_press: root.on_exit()
            Button:
                text: "Save"
                size_hint: .1, 1
                height: "45dp"
                width: "100dp"
                pos: "50dp", "45dp"
                on_press: root.save_new_data()
            Button:
                text: "Delete"
                size_hint: .1, 1
                height: "45dp"
                width: "100dp"
                pos: "50dp", "45dp"
                on_press: root.delete_card()