<NewCardScreen>:
    on_pre_enter: root.load_empty_tense_tables()
    BoxLayout:
        orientation: "vertical"
        size_hint: .8, 1
        pos_hint: {"center_x": 0.5}
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: "90dp"
            Label:
                text: "New Card"
                font_size: "30dp"
        BoxLayout:
            size_hint: .8, None
            orientation: "horizontal"
            height: "60dp"
            spacing: "5dp"
            width: root.width
            pos_hint: {"center_x": 0.5}
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            BoxLayout:
                orientation: "horizontal"
                size_hint: 1, None
                height: "30dp"
                pos_hint: {"center_y": 0.5}
                Label:
                    size_hint: 1, 1
                    text: "Original"
                    color: 0,0,0,1
                    font_size: "13dp"
                TextInput:
                    size_hint: 1, 1
                    id: original_textinput
                    hint_text: "Type here..."
                    write_tab: False
                    multiline: False
                    font_size: "14dp"
                    width: "154dp"

            BoxLayout:
                orientation: "horizontal"
                size_hint: 1, None
                height: "30dp"
                pos_hint: {"center_y": 0.5}
                Label:
                    size_hint: 1, 1
                    text: "Infinitive "
                    color: 0,0,0,1
                    font_size: "13dp"
                TextInput:
                    id: infinitive_textinput
                    size_hint: 1, 1
                    hint_text: "Type here..."
                    multiline: False
                    write_tab: False
                    font_size: "14dp"
                    width: "154dp"

        ScrollView:
            size_hint: 1, 1
            do_scroll_x: False
            do_scroll_y: True

            StackLayout:
                id: tense_stack_layout
                size_hint_y: None
                orientation: "lr-tb"
                height: self.minimum_height
                spacing: "5dp"
                width: root.width

        Label:
            size_hint_y: None
            height: "20dp"
            text:""

        BoxLayout:
            size_hint_y: None
            orientation: "horizontal"
            height: "60dp"
            spacing: "5dp"
            padding: "30dp", "20dp"
            width: root.width
            Button:
                text: "Back"
                size_hint: None, None
                height: "45dp"
                width: "100dp"
                pos: "50dp", "45dp"
                on_press: root.on_exit()
            Button:
                text: "Create"
                size_hint: None, None
                height: "45dp"
                width: "100dp"
                pos: "250dp", "45dp"
                on_press: root.on_create()